    <style name="Theme.KExampleMaterialDesign" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/purple_500</item>
        <item name="colorPrimaryVariant">@color/purple_700</item>
        <item name="colorOnPrimary">@color/white</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/teal_200</item>
        <item name="colorSecondaryVariant">@color/teal_700</item>
        <item name="colorOnSecondary">@color/black</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor" tools:targetApi="l">?attr/colorPrimaryVariant</item>
        <!-- Customize your theme here. -->
    </style>

    <style name="MyAppTheme" parent="Theme.MaterialComponents.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">#00796b</item>
        <item name="colorPrimaryVariant">#48a999</item>
        <item name="colorSecondary">#ff9800</item>
        <item name="colorSecondaryVariant">#ffc947</item>
        <item name="colorError">#F44336</item>

        <item name="colorOnSurface">#212121</item>
    </style>

    <style name="YourAppTheme" parent="Theme.MaterialComponents.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">#6d4c41</item>
        <item name="colorPrimaryVariant">#9c786c</item>
